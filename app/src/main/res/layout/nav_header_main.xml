<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@color/colorPrimary"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        style="@style/CardViewStyle.Active"
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textWeekNumber"
                    style="@style/TextView.Primary.Header"
                    android:text="Неделя 1" />

                <TextView
                    android:id="@+id/textWeekColor"
                    style="@style/TextView.Primary.Header"
                    android:layout_alignParentRight="true"
                    android:text="Белая" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="65dp">

                <TextView
                    android:id="@+id/textLessonName"
                    style="@style/TextView.PrimaryDark"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="1-14н.Информатика (л.р.)"
                    android:textSize="20sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textLessonTime"
                    style="@style/TextView.Primary"
                    android:text="14.15 - 15.45" />

                <TextView
                    android:id="@+id/textClassroomNumber"
                    style="@style/TextView.Primary"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:text="413н" />
            </RelativeLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
